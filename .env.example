# ==========================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# ==========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to git!

# ==========================================
# DATABASE - SQL SERVER
# ==========================================
SQL_SERVER_HOST=localhost
SQL_SERVER_PORT=1433
SQL_SERVER_DATABASE=UniMarket5
SQL_SERVER_USER=sa
SQL_SERVER_PASSWORD=StrongPassword123!

# Connection String (for .NET Backend)
ConnectionStrings__DefaultConnection=Server=sqlserver,1433;Database=UniMarket5;User Id=sa;Password=StrongPassword123!;TrustServerCertificate=True;

# ==========================================
# DATABASE - MONGODB
# ==========================================
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=unimarket_chat

# Connection String (for .NET Backend)
ConnectionStrings__MongoDbConnection=mongodb://mongodb:27017

# ==========================================
# BACKEND API
# ==========================================
ASPNETCORE_ENVIRONMENT=Development
BACKEND_PORT=5133
API_BASE_URL=http://localhost:5133

# JWT Configuration
JWT_SECRET_KEY=YourSuperSecretKeyHere_ChangeThisInProduction!
JWT_ISSUER=UniMarketAPI
JWT_AUDIENCE=UniMarketClient
JWT_EXPIRATION_MINUTES=60

# ==========================================
# FRONTEND
# ==========================================
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:5133

# ==========================================
# DOCKER NETWORK
# ==========================================
DOCKER_NETWORK_NAME=unimarket-network

# ==========================================
# FILE UPLOAD (if applicable)
# ==========================================
MAX_FILE_SIZE_MB=10
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif,webp

# ==========================================
# SMTP (for email notifications - optional)
# ==========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_NAME=UniMarket
# SMTP_FROM_EMAIL=noreply@unimarket.com

# ==========================================
# CLOUDINARY (for image storage - optional)
# ==========================================
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=Information
ENABLE_SWAGGER=true

# ==========================================
# NOTES:
# ==========================================
# 1. For local development with Docker, use default values above
# 2. For production, change all passwords and secret keys
# 3. Never commit .env file to git
# 4. Database hosts in Docker should use service names (e.g., 'sqlserver', 'mongodb')
# 5. Database hosts for local development (non-Docker) should use 'localhost'
